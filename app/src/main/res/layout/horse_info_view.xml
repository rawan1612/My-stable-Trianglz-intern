<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/horse_info_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="22dp"
    android:layout_marginVertical="16dp">

    <TextView
        android:id="@+id/horse_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfp_semibold"
        android:paddingBottom="10dp"
        android:text="@string/horse_info"
        android:textAlignment="viewStart"
        android:textColor="@color/dark"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfp_regular"
        android:text="@string/Horse_Name"
        android:textAlignment="viewStart"
        android:textColor="@color/cool_grey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horse_info_label" />

    <TextView
        android:id="@+id/value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfp_regular"
        android:textAlignment="viewEnd"
        android:textColor="@color/cool_grey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/key"
        app:layout_constraintTop_toBottomOf="@id/horse_info_label"
        tools:text="Denver" />

</androidx.constraintlayout.widget.ConstraintLayout>
