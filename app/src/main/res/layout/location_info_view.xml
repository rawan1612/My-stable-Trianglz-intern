<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/location_info_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginStart="22.5dp"
    android:layout_marginEnd="22.5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfp_semibold"
        android:textSize="15sp"
        android:textColor="@color/dark"
        android:text="@string/Location_on_map"/>
<TextView
    android:id="@+id/location_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:fontFamily="@font/sfp_regular"
    android:textSize="15sp"
    android:textColor="@color/dark_87"
    android:text="Lorem Ipsum is simply dummy text of the print and typesetting industry."/>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="10dp">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_fragment"
        class="com.google.android.gms.maps.SupportMapFragment"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        map:mapId="YOUR_MAP_ID" >
    </androidx.fragment.app.FragmentContainerView>

</androidx.cardview.widget.CardView>

</LinearLayout>