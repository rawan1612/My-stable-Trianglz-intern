<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="22.5dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/sfp_bold"
        android:lineHeight="30sp"
        android:text="Denver"
        android:textColor="@color/dark"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfp_bold"
            android:lineHeight="160dp"
            android:lineSpacingExtra="4sp"
            android:text="KWD 7500"
            android:textColor="@color/darkBeige"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/sfp_regular"
            android:lineSpacingExtra="4sp"
            android:text="This ad ends in 23 March"
            android:textColor="@color/dark_50"
            android:gravity="right"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/images_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        tools:context=".view.productDetails.ProductDetailsFragment"
        tools:listitem="@layout/image_list_item" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sfp_semibold"
        android:text="@string/details"
        android:textColor="@color/dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22.5dp"
        android:fontFamily="@font/sfp_regular"
        android:text="Lorem Ipsum is simply dummy text of the print and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown ."
        android:textColor="@color/dark_87"
        android:textSize="15sp" />
    <RelativeLayout
        android:id="@+id/product_sold_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="22.5dp"
        android:layout_gravity="center"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sold_out_rect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            android:fontFamily="@font/sfp_bold"
            android:textColor="@color/white"
            android:text="@string/Sold_out" />
    </RelativeLayout>

</LinearLayout>